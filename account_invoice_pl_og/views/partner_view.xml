<?xml version="1.0"?>
<odoo>
  <data>

    <record id="view_partner_tree_pl" model="ir.ui.view">
      <field name="name">res.partner.tree.pl</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree"/>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <field name="display_name" position="replace">
          <field name="ref"/>
          <field name="display_name"/>
          <field name="vat"/>
          <field name="city"/>
        </field>
      </field>
    </record>
    <record id="view_partner_form_pl" model="ir.ui.view">
      <field name="name">res.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="email" position="after">
          <field name="post"/>
        </field>
        <field name="property_payment_term_id" position="after">
          <field name="company_partner_id" invisible="1"/>
          <field name="bank_home_id"/>
           <!-- domain="[('partner_id', '=', company_id.partner_id.id)]"/> -->
        </field>
      </field>
    </record>

  </data>
</odoo>
