<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_gus_wizard_form" model="ir.ui.view">
        <field name="name">Partner GUS Wizard</field>
        <field name="model">partner.gus.wizard</field>
        <field name="arch" type="xml">
            <form string="GUS">
              <group>
                <field name="nip" default_focus="1"/>
                <field name="krs"/>
                <field name="regon"/>
              </group>
              <footer>
                  <button name="gus_search" string="Szukaj" type="object" class="oe_highlight"/>
                  or
                  <button string="Cancel" class="oe_link" special="cancel" />
              </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_gus_wizard" model="ir.actions.act_window">
        <field name="name">Partner GUS Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.gus.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="partner_gus_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
