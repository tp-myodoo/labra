    <template id="report_invoice_document_pl" inherit_id="account.report_invoice_document">
      <xpath expr="//t[@t-set='address']" position="replace">
          <t t-set="address">
              <span><strong>Purchaser:</strong></span>
              <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "vat"], "no_marker": True}'/>
          </t>
      </xpath>

      <xpath expr="//h2" position="inside">
        <t t-if="o.partner_id.lang == 'pl_PL'">
          <span t-if="o.move_type in ['in_refund', 'out_refund']">For Invoice No</span>
          <span t-if="o.move_type in ['in_refund', 'out_refund']" t-field="o.reversed_entry_id.name"/>
          <span t-if="o.move_type in ['in_refund', 'out_refund'] and o.reversed_entry_id.invoice_date">From</span>
          <span t-if="o.move_type in ['in_refund', 'out_refund']" t-field="o.reversed_entry_id.invoice_date"/>
        </t>
      </xpath>

      <xpath expr="//div[hasclass('row', 'mt32', 'mb32')]" position="attributes">
        <attribute name="t-if">o.partner_id.lang != 'pl_PL'</attribute>
      </xpath>
      <xpath expr="//div[@id='total']" position="attributes">
        <attribute name="style">page-break-inside: avoid !important;</attribute>
      </xpath>

      <xpath expr="//div[hasclass('row', 'mt32', 'mb32')]" position="after">
        <div class="row mt16 mb16" t-if="o.partner_id.lang == 'pl_PL'">
          <div class="col-auto" t-if="o.name">
            <strong>Description</strong>
            <p t-field="o.name"/>
          </div>
          <div class="col-auto" t-if="o.move_type not in ['in_refund', 'out_refund'] and o.invoice_origin">
            <strong>Order No:</strong>
            <p t-field="o.invoice_origin"/>
          </div>
          <div class="col-auto" t-if="o.move_type in ['in_refund', 'out_refund'] and o.reversed_entry_id.invoice_origin">
            <strong>Order No:</strong>
            <p t-field="o.reversed_entry_id.invoice_origin"/>
          </div>
          <div class="col-auto" t-if="o.date">
            <strong>Sale Date:</strong>
            <p t-field="o.date"/>
          </div>
          <div class="col-auto" t-if="o.invoice_date">
            <strong>Issue Date:</strong>
            <p t-field="o.invoice_date"/>
          </div>
          <div class="col-auto" t-if="o.invoice_payment_term_id">
            <strong>Payment Term:</strong>
            <p t-field="o.invoice_payment_term_id"/>
          </div>
          <div class="col-auto" t-if="o.invoice_date_due">
            <strong>Due Date:</strong>
            <p t-field="o.invoice_date_due"/>
          </div>
        </div>
        <div class="row mt16 mb16" t-if="o.partner_bank_id">
          <div class="col-auto">
            <strong>Bank account:</strong>
            <p t-field="o.partner_bank_id.acc_number"/>
          </div>
          <div class="col-auto" t-if="o.partner_bank_id.bank_bic">
            <strong>BIC:</strong>
            <p t-field="o.partner_bank_id.bank_bic"/>
          </div>
        </div>
      </xpath>

      <xpath expr="//table[@name='invoice_line_table']" position="before">
        <!-- declare variable foreign_cur for later use  -->
        <t t-if="o.company_id.partner_id.country_id.code == 'PL' and o.partner_id.country_id.code == 'PL'">
        <t t-set="foreign_cur" t-value="False"/>
        <t t-if="o.reversed_entry_id">
          <strong>Before refund:</strong>
            <table class="table">
              <thead>
                <tr>
                  <td class="col-xs-3">
                    <strong>Description</strong>
                  </td>
                  <td class="col-xs-1 text-right">
                    <strong>Quantity</strong>
                  </td>
                  <td class="col-xs-2 text-right">
                    <strong>Unit Price</strong>
                  </td>
                  <td t-if="display_discount" class="col-xs-2 text-right">
                    <strong>Disc.(%)</strong>
                  </td>
                  <td class="col-xs-2 text-right">
                    <strong>Subtotal</strong>
                  </td>
                  <td class="col-xs-1 text-right">
                    <strong>VAT</strong>
                  </td>
                  <td class="col-xs-1 text-right oe_fixed_width">
                    <strong>Tax</strong>
                  </td>
                  <td class="col-xs-2 text-right">
                    <strong>Gross</strong>
                  </td>
                </tr>
              </thead>
              <tbody class="invoice_tbody">
                <t t-set="current_subtotal" t-value="0"/>

                <t t-foreach="o.reversed_entry_id.invoice_line_ids" t-as="l">

                  <t t-set="current_subtotal" t-value="current_subtotal + l.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                  <t t-set="current_subtotal" t-value="current_subtotal + l.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                  <tr style="page-break-inside: avoid !important;">
                    <t t-if="not l.display_type">
                      <td><span t-field="l.name"/>
                        <span t-if="l.product_id.pkwiu"><br/>
                          <span>PKWiU No: <span t-field="l.product_id.pkwiu"/></span>
                        </span>
                      </td>
                      <td class="text-right"><span t-field="l.quantity"/>
                        <span t-field="l.product_uom_id" groups="uom.group_uom"/></td>
                      <td class="text-right"><span t-field="l.price_unit" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                      <td t-if="display_discount" class="text-right"><span t-field="l.discount"/></td>
                      <td class="text-right"><span t-esc="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                      <td class="text-right"><span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))"/></td>
                      <td class="text-right"><span t-esc="l.invoice_line_tax" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                      <td class="text-right"><span t-esc="l.price_total" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                    </t>
                    <t t-if="l.display_type == 'line_section'">
                        <td colspan="99" class="table-active">
                            <strong><span t-field="l.name"/></strong>
                        </td>
                        <t t-set="current_section" t-value="l"/>
                        <t t-set="current_subtotal" t-value="0"/>
                    </t>
                    <t t-if="l.display_type == 'line_note'">
                        <td colspan="99">
                            <span t-field="l.name"/>
                        </td>
                    </t>
                  </tr>
                  <t t-if="current_section and (l_last or o.reversed_entry_id.invoice_line_ids[l_index+1].display_type == 'line_section')">
                      <tr class="is-subtotal text-right">
                          <td colspan="99">
                              <strong class="mr16">Subtotal</strong>
                              <span
                                  t-esc="current_subtotal"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                              />
                          </td>
                      </tr>
                  </t>
                </t>
              </tbody>
            </table>
          <div style="display: inline-block; width: 100%;">
            <div class="row pull-right" style="page-break-inside: avoid !important; margin-right:0px;">
              <div class="col-xs-6 ">
                <table class="table table-condensed oe_no_margin">
                  <tbody>
                    <th class="text-right">Net</th>
                    <th class="text-right">Tax</th>
                    <th class="text-right">Tax Amount</th>
                    <th class="text-right">Gross</th>
                    <t t-foreach="o.reversed_entry_id.funct_tax_lines()" t-as="tax_line">
                      <tr class="oe_no_border">
                        <td class="text-right oe_fixed_width"><span t-esc="tax_line['amount_base']" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                        <td class="text-right"><span t-esc="tax_line['name']"/></td>
                        <td class="text-right oe_fixed_width"><span t-esc="tax_line['tax']" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                        <td class="text-right oe_fixed_width"><span t-esc="tax_line['gross_amount']" t-options='{"widget": "monetary", "display_currency": o.reversed_entry_id.currency_id}'/></td>
                      </tr>
                      <tr t-if="tax_line['foreign_cur']">
                        <t t-set="foreign_cur" t-value="True"/>
                        <td colspan="2"></td>
                        <td class="text-right oe_fixed_width">(
                          <span t-esc="tax_line['country_tax']" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                          )*</td>
                        <td></td>
                      </tr>
                    </t>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
        </t>
        <t t-if="o.reversed_entry_id">
          <div style="width: 100%;">
          <strong>After Refund:</strong>
        </div>
            <table class="table">
              <thead>
                <tr>
                  <td class="col-xs-3">
                    <strong>Description</strong>
                  </td>
                  <td class="col-xs-1 text-right">
                    <strong>Quantity</strong>
                  </td>
                  <td class="col-xs-2 text-right">
                    <strong>Unit Price</strong>
                  </td>
                  <td t-if="display_discount" class="col-xs-2 text-right">
                    <strong>Disc.(%)</strong>
                  </td>
                  <td class="col-xs-2 text-right">
                    <strong>Subtotal</strong>
                  </td>
                  <td class="col-xs-1 text-right">
                    <strong>VAT</strong>
                  </td>
                  <td class="col-xs-1 text-right oe_fixed_width">
                    <strong>Tax</strong>
                  </td>
                  <td class="col-xs-2 text-right">
                    <strong>Gross</strong>
                  </td>
                </tr>
              </thead>
              <tbody class="invoice_tbody">
                <t t-set="current_subtotal" t-value="0"/>

                <t t-foreach="o.correction_invoice_line_ids" t-as="l">

                  <t t-set="current_subtotal" t-value="current_subtotal + l.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                  <t t-set="current_subtotal" t-value="current_subtotal + l.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                  <tr style="page-break-inside: avoid !important;">
                    <t t-if="not l.display_type">
                      <td><span t-esc="l.name"/>
                        <span t-if="l.product_id.pkwiu"><br/>
                          <span>PKWiU No: <span t-esc="l.product_id.pkwiu"/></span>
                        </span>
                      </td>
                      <td class="text-right"><span t-esc="l.quantity"/>
                        <span t-esc="l.product_uom_id.name" groups="uom.group_uom"/>
                      </td>
                      <td class="text-right">
                        <span t-esc="l.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                      <td t-if="display_discount" class="text-right">
                        <span t-esc="l.discount"/>
                      </td>
                      <td class="text-right">
                        <span t-esc="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                      <td class="text-right">
                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                      </td>
                      <td class="text-right">
                        <span t-esc="l.invoice_line_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                      <td class="text-right">
                        <span t-esc="l.price_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                    </t>
                    <t t-if="l.display_type == 'line_section'">
                      <td colspan="99" class="table-active">
                          <strong><span t-field="l.name"/></strong>
                      </td>
                      <t t-set="current_section" t-value="l"/>
                      <t t-set="current_subtotal" t-value="0"/>
                    </t>
                    <t t-if="l.display_type == 'line_note'">
                        <td colspan="99">
                          <span t-field="l.name"/>
                        </td>
                    </t>
                  </tr>
                  <t t-if="current_section and (l_last or o.correction_invoice_line_ids[l_index+1].display_type == 'line_section')">
                    <tr class="is-subtotal text-right">
                        <td colspan="99">
                            <strong class="mr16">Subtotal</strong>
                            <span
                                t-esc="current_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                            />
                        </td>
                    </tr>
                  </t>
                </t>
              </tbody>
            </table>

        <div class="row pull-right" style="page-break-inside: avoid !important; margin-right:0px;">
        <div class="col-xs-6 ">
        <table class="table table-condensed oe_no_margin">
          <tbody>
            <th class="text-right">Net</th>
            <th class="text-right">Tax</th>
            <th class="text-right">Tax Amount</th>
            <th class="text-right">Gross</th>
            <t t-foreach="o.get_refund_sum(o.reversed_entry_id.funct_tax_lines(), o.funct_tax_lines())" t-as="tax_line">
              <tr>
                <td class="text-right oe_fixed_width">
                  <span t-esc="tax_line['amount_base']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
                <td class="text-right">
                  <span t-esc="tax_line['name']"/>
                </td>
                <td class="text-right oe_fixed_width">
                  <span t-esc="tax_line['tax']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
                <td class="text-right oe_fixed_width">
                  <span t-esc="tax_line['gross_amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
              </tr>
              <tr t-if="tax_line['foreign_cur']">
                <t t-set="foreign_cur" t-value="True"/>
                <td colspan="2"></td>
                <td class="text-right oe_fixed_width">(
                  <span t-esc="tax_line['country_tax']" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                  )*</td>
                <td></td>
              </tr>
            </t>
          </tbody>
        </table>
        </div>
        </div>
        </t>
      </t>
      </xpath>

      <xpath expr="//div[hasclass('clearfix')]" position="replace">
        <div class="row" style="page-break-inside: avoid !important; display: inline-block; float: right; margin-right:0px;">
          <div class="col-xs-6">
            <t t-if="not o.reversed_entry_id">
              <table class="table table-condensed oe_no_margin">
                <tbody>
                  <th class="text-right">Net</th>
                  <th class="text-right">Tax</th>
                  <th class="text-right">Tax Amount</th>
                  <th class="text-right">Gross</th>
                  <t t-foreach="o.funct_tax_lines()" t-as="tax_line">
                    <tr>
                      <td class="text-right">
                        <span t-esc="tax_line['name']"/>
                      </td>
                      <td class="text-right oe_fixed_width">
                        <span t-esc="tax_line['amount_base']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                      <td class="text-right oe_fixed_width">
                        <span t-esc="tax_line['tax']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                      <td class="text-right oe_fixed_width">
                        <span t-esc="tax_line['gross_amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                      </td>
                    </tr>
                    <tr t-if="tax_line['foreign_cur']">
                      <t t-set="foreign_cur" t-value="True"/>
                      <td colspan="2"></td>
                      <td class="text-right oe_fixed_width">(
                        <span t-esc="tax_line['country_tax']" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                        )*</td>
                      <td></td>
                    </tr>
                  </t>
                </tbody>
              </table>
            </t>
          </div>
        </div>
          <div id="total" class="row" style="display: inline-block; width: 100%; margin-left: 15px; margin-top: 10px;">
              <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                  <table class="table table-sm;page-break-inside: avoid;">
                      <tr class="border-black o_subtotal" style="">
                          <td><strong>Subtotal</strong></td>
                          <td class="text-right">
                            <span t-if="o.reversed_entry_id" t-esc="-(o.amount_untaxed)" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            <span t-if="not o.reversed_entry_id" t-esc="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                          </td>
                      </tr>

                      <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                      <!-- <t t-call="account.document_tax_totals"/> -->

                      <t t-if="print_with_payments">
                          <t t-if="o.payment_state != 'invoicing_legacy'">
                              <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                              <t t-foreach="payments_vals" t-as="payment_vals">
                                  <tr>
                                      <td>
                                          <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                      </td>
                                      <td class="text-right">
                                          <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                      </td>
                                  </tr>
                              </t>
                              <t t-if="len(payments_vals) > 0">
                                  <tr class="border-black">
                                      <td><strong>Amount Due</strong></td>
                                      <td class="text-right">
                                          <span t-field="o.amount_residual"/>
                                      </td>
                                  </tr>
                              </t>
                          </t>
                      </t>


                      <!-- <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                          <tr style="">
                              <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                  <td><span t-esc="amount_by_group[0]"/></td>
                                  <td class="text-right o_price_total">
                                      <span t-esc="amount_by_group[7]" />
                                  </td>
                              </t>
                              <t t-else="">
                                  <td>
                                      <span t-esc="amount_by_group[0]"/>
                                      <span>&amp;nbsp;<span>on</span>
                                          <t t-esc="amount_by_group[8]"/>
                                      </span>
                                  </td>
                                  <td class="text-right o_price_total">
                                      <span t-esc="amount_by_group[7]"/>
                                  </td>
                              </t>
                          </tr>
                      </t> -->
                      <tr class="border-black o_total">
                          <td><strong>Total</strong></td>
                          <td class="text-right">
                              <span t-if="o.reversed_entry_id" t-esc="-(o.amount_total)" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                              <span t-if="not o.reversed_entry_id" t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                          </td>
                      </tr>
                  </table>
              </div>
        </div>
      </xpath>

      <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[last()]" position="replace">
        <th t-if="o.partner_id.lang != 'pl_PL'" class="text-right">Amount</th>
        <th t-if="o.partner_id.lang == 'pl_PL'" class="text-right">Subtotal</th>
        <th class="text-right" t-if="o.partner_id.lang == 'pl_PL'">Tax</th>
        <th class="text-right" t-if="o.partner_id.lang == 'pl_PL'">Gross</th>
      </xpath>

      <xpath expr="//table[@name='invoice_line_table']" position="attributes">
        <attribute name="style">margin-bottom: 10px; padding-bottom: 10px;</attribute>
        <attribute name="t-if">not(o.reversed_entry_id) or not o.company_id.partner_id.country_id.code == 'PL' or not o.partner_id.country_id.code == 'PL' or o.display_original_refund == True</attribute>
      </xpath>

      <xpath expr="//span[@t-field='line.name']" position="after">
        <t t-if="line.product_id and line.product_id.pkwiu and o.partner_id.lang == 'pl_PL'">
          <br/>PKWiU No: <span t-field="line.product_id.pkwiu"/>
        </t>
      </xpath>

      <xpath expr="//tbody[hasclass('invoice_tbody')]//tr[1]/t[@name='account_invoice_line_accountable']/td[6]" position="replace">
        <td class="text-right" id="subtotal" style="white-space: nowrap;">
            <span t-if="o.reversed_entry_id" t-esc="- line.price_subtotal"
                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
            <span t-if="not o.reversed_entry_id" t-esc="line.price_subtotal"
                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
        </td>
        <td class="text-right" t-if="o.partner_id.lang == 'pl_PL'" style="white-space: nowrap;">
          <span t-if="o.reversed_entry_id" t-esc="- line.invoice_line_tax" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
          <span t-if="not o.reversed_entry_id" t-esc="line.invoice_line_tax" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </td>
        <td class="text-right" t-if="o.partner_id.lang == 'pl_PL'" style="white-space: nowrap;">
          <span t-if="o.reversed_entry_id" t-esc="- line.price_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
          <span t-if="not o.reversed_entry_id" t-esc="line.price_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </td>
      </xpath>

      <xpath expr="//div[@t-if='not is_html_empty(o.narration)']" position="before">
        <p t-if="o.company_id.currency_id != o.currency_id and foreign_cur">
          *Kwota podatku VAT w walucie PLN według średniego kursu ogłoszonego w dniu roboczym poprzedzającym datę faktury.
        </p>
      </xpath>

      <xpath expr="//p[@t-if='o.invoice_payment_term_id']" position="replace">
        <p t-if="o.invoice_payment_term_id and o.partner_id.lang != 'pl_PL'">
          <span t-field="o.invoice_payment_term_id.note"/>
        </p>
      </xpath>
    </template>
  </data>
</odoo>
