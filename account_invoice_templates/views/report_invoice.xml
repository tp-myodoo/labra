<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- HEADERS -->
    <template id="external_layout_striped_vat" inherit_id="web.external_layout_striped">
      <xpath expr="//div[hasclass('company_address')]" position="inside">
        <div>
          <span t-field="company.vat"/>
        </div>
      </xpath>
    </template>

    <template id="external_layout_boxed_vat" inherit_id="web.external_layout_boxed">
      <xpath expr="//div[@name='company_address']" position="inside">
        <span t-field="company.vat"/>
      </xpath>
    </template>

    <template id="external_layout_bold_vat" inherit_id="web.external_layout_bold">
      <xpath expr="//li[@t-if='company.website']" position="after">
        <li t-if="company.vat"><span t-field="company.vat"/></li>
      </xpath>
    </template>

    <template id="external_layout_standard_vat" inherit_id="web.external_layout_standard">
      <xpath expr="//div[1]" position="replace">
        <div class="header">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row ml-2" style="position: fixed; width: 70%; display: inline-block;">
              <span><strong>Seller:</strong></span>
                <div name="company_address">
                    <div t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name","vat"], "no_marker": true}'
                    />
                </div>
            </div>
        </div>
      </xpath>
    </template>

